<odoo>
    <data>
        <record id="po_refuse_reason_view_form" model="ir.ui.view">
            <field name="name">po.refuse.reason.form</field>
            <field name="model">po.refuse.reason</field>
            <field name="arch" type="xml">
                <form string="Refuse Purchase Order">
                        <group>
                            <field name="po_ref_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="refuse_reason" required="1"/>
                        </group>
                    <footer>
                        <button string='Refuse' name="btn_refuse_reason" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>
    </data>
</odoo>